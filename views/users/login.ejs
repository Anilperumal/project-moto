<% layout("layouts/boilerplate")  %>


<div class="row mt-3">
    <h2 class="col-6 offset-3"> Login </h2>
    <div class="col-8 offset-2">

         <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>   <!--  we create listing object pair by writing name field as Listing[<object>] is  created as  key value pair-->
            <input name="username" id="username" type="text" class="form-control" required>     
                    <div class="invalid-feedback"> Enter username</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>   <!--  we create listing object pair by writing name field as Listing[<object>] is  created as  key value pair-->
            <input name="password" id="password" placeholder=""  type="password" class="form-control" required>     
                    <div class="valid-feedback"> password looks good </div>
            </div>
            <button class="btn btn-success"> Log-In</button>
         </form>
        </div>
        </div>
