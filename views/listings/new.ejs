<% layout("/layouts/boilerplate") %>

<div>
    <div class="row mt-3">
        <div class="col-8 offset-2">

    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>   <!--  we create listing object pair by writing name field as Listing[<object>] is  created as  key value pair-->
        <input name="listing[title]" placeholder="Enter Vehicle name to add"  type="text" class="form-control">     
        </div>
        <div  class="mb-3">
            <label for="description" class="form-label">Description</label> 
        <textarea type="text" name="listing[description]"  class="form-control"></textarea>
        </div>
        <div  class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" placeholder="image url" type="text" class="form-control">
        </div>
        <div class="row"> 
        <div  class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="price" type="number" class="form-control">
        </div>
        <div  class="mb-3 col-md-8">         
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="country" type="text" class="form-control">
        </div>
    </div>
       
        <div  class="mb-3">
            <label for="city" class="form-label">Location</label>
            <input name="listing[location]" placeholder="city, state" type="text" class="form-control">
         
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
    
    </form>
</div>
</div>
</body>
