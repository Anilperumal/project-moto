<% layout("/layouts/boilerplate") %>

<div>
    <div class="row mt-3">
        <div class="col-8 offset-2">

    <h3>Enter new vehicle details</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Model</label>   <!--  we create listing object pair by writing name field as Listing[<object>] is  created as  key value pair-->
        <input name="listing[title]" placeholder="Enter Vehicle name to add"  type="text" class="form-control" required>     
                <div class="invalid-feedback">Enter valid Model </div>
        </div>
        <div  class="mb-3">
            <label for="description" class="form-label">Vehicle type and details</label> 
        <textarea type="text" name="listing[description]"  class="form-control" required></textarea>
                <div class="invalid-feedback">Enter details about vehicle and its type </div>
        </div>
        <div  class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" placeholder="image url" type="text" class="form-control">
        </div>
        <div class="row"> 
        <div  class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="price" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter valid price! </div>
        </div>
        <div  class="mb-3 col-md-8">         
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="country" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter valid Country name </div>
        </div>
    </div>
       
        <div  class="mb-3">
            <label for="city" class="form-label">Location</label>
            <input name="listing[location]" placeholder="city, state" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter valid location </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
    
    </form>
</div>
</div>
</body>
